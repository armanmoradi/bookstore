<h2>Add New Auther</h2>
<%= form_for @auther do |f| %>
        <% if @auther.errors.any? %>
      <% @auther.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
      <% end %>
    <% end %>



	<div class="form-group">
		<%= f.label :first_name %><br />
		<%= f.text_field :first_name, class:'form-control' %><br />
	</div>
	<div class="form-group">
		<%= f.label :last_name %><br />
		<%= f.text_field :last_name, class:'form-control' %><br />
	</div>
	<%= f.submit "submit", class:'btn btn-primary' %>
	<%= link_to "Cancel", authers_path, class:'btn btn-default' %>
<% end %>